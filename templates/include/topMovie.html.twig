<div class="row g-0 mt-4 p-3">
    <div class="align-middle ratio ratio-16x9">
        <iframe src="{{ topMovie.urlVideo}}?rel=0" title="YouTube video" allowfullscreen></iframe>
    </div>
    <div class="row miniature-trailer">
        <div class="col-xs-4 col-md-2">
            <img class="img-fluid" src="{{ topMovie.thumbnail }}"
                 alt="Card image cap">
        </div>
        <div class="col-xs-4 col-md-6 bande-annonce-text">
            <h3 class="card-title titre-bande-annonce pt-3">{{ topMovie.title }}</h3>
            {#                        <h4 class="card-text bande-annonce-text">{{ topMovie.title }} Bande annonce {% if topMovie.originalLanguage =="fr" %}VF{% else %}VOSTFR{% endif %}</h4>#}
            <h4 class="card-text bande-annonce-text">{{ topMovie.title }} Trailer</h4>
        </div>

    </div>
    <div class="text-bg-light p-3">
        {{ topMovie.description }}
    </div>
</div>